<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navegation"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="com.example.carrentalranachrita.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/actionRegistration"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/goHome"
            app:destination="@id/homeApp" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.carrentalranachrita.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/backLogin"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/homeApp"
        android:name="com.example.carrentalranachrita.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/homeToAddCar"
            app:destination="@id/addCarFragment" />
    </fragment>
    <fragment
        android:id="@+id/addCarFragment"
        android:name="com.example.carrentalranachrita.AddCarFragment"
        android:label="fragment_add_car"
        tools:layout="@layout/fragment_add_car" />
</navigation>