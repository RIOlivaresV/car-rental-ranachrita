<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navegation"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="com.example.carrentalranachrita.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/goHome"
            app:destination="@id/homeApp" />
        <action
            android:id="@+id/action_login_to_carList"
            app:destination="@id/carList" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.carrentalranachrita.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/backLogin"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/homeApp"
        android:name="com.example.carrentalranachrita.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/carList"
        android:name="com.example.carrentalranachrita.CarList"
        android:label="fragment_car_list"
        tools:layout="@layout/fragment_car_list" >
        <action
            android:id="@+id/action_carList_to_filterFragment"
            app:destination="@id/filterFragment" />
        <action
            android:id="@+id/action_carList_to_carDetail"
            app:destination="@id/carDetail" />
    </fragment>
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.carrentalranachrita.FilterFragment"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_filter" />
    <fragment
        android:id="@+id/carDetail"
        android:name="com.example.carrentalranachrita.CarDetail"
        android:label="fragment_car_detail"
        tools:layout="@layout/fragment_car_detail" />
</navigation>